<script>

   let testData = ['111', '222', 'test', 'Madison', 'Madison Wisconsin'];
   // Here should be a search over the database. 

   $('#create-btn').on('click', function (e) {
      e.preventDefault();
   });

   $(':text').on('input', function (e) { // 我他妈真的服了这个傻逼JQuery
      e.preventDefault();

      let room_text = $('#room-field').val();

      let matches = testData.filter(datum => {
         const regex = new RegExp(`${room_text}`, 'gi');
         return datum.match(regex);
      });

      if (room_text.length === 0) {
         // Here should display all data
         matches = [];
         outputhtml(testData);
      }

      outputhtml(matches);






      // let info = { room, player };
