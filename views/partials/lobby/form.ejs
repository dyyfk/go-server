      //    //     alert(err);
      //    // }

      // }
      // );
   });

   outputhtml = matches => {
      let player = $('#rooms');
      if (matches.length > 0) {
         player.html('');
         player.append('<ul>');
         matches.map((match) => {
            let html = `<li class="list-group-item"><a href="/room">${match}</a></li>`;
            player.append(html);
         })
         player.append('</ul>');

      } else {
         player.html('<h3 class="my-3">No rooms were found </h3>');
      }
   }
</script>