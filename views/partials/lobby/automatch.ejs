<div class="pr-2 py-2">
    <button class="btn btn-info" id="automatch" type="button" data-toggle="tooltip" data-placement="top" title=""
        data-original-title="Chinese Rule"><span>Find a match</span>
        <i class="fas fa-info-circle" data-toggle="modal" data-target="#ruleModal"></i>
    </button>
    <button class="btn btn-primary" type="button"><span>Play with AI</span></button>
</div>

<!-- Rule information-->
<div class="modal" id="ruleModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal Title</h5>
                <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Rule information here
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    #progress-bar {
        position: absolute;
        top: 40%;
        width: 40%;
        z-index: 10;
    }
</style>

<script src="/socket.io/socket.io.js"></script>
<script>
    // Init tooltips
    $('[data-toggle="tooltip"]').tooltip();

    function showTooltip() {
        $('#automatch').tooltip('show');
    }

    function hideTooltip() {
        $('#automatch').tooltip('hide');
    }
    function toggleTooltip() {
        $('#automatch').tooltip('toggle');
    }
    const searchingPlayer = () => {
        $("#automatch").prop('disabled', true);
        $('#overlay').toggleClass('active');
        let html = `
            <div id="progress-bar" class="alert alert-primary alert-dismissible">
                    <button class="close" type="button" data-dismiss="alert">
                        <i class="fas fa-times"></i>
                    </button>
                    <strong>Finding player...</strong>
                    <div class="progress">
                        <div class="progress-bar bg-info progress-bar-striped progress-bar-animated" style="width:100%;">
                    </div>
                </div>
            </div> 
            `;
        $('.lobby').append(html);
        $('.close').click(function () {
            $("#automatch").prop('disabled', false);
            $('#overlay').toggleClass('active');
        });
    };

    const foundPlayer = () => {
        $('.progress').remove();
        $('strong').text('Player found');
        $('.alert-dismissible').addClass('alert-success').removeClass('alert-primary');
    };

</script>
<script>
    let socket = io();

    if (!$('#automatch').prop('disabled')) { // when the button is disabled, it is searching for player
        socket.close();
        socket = io.connect('/');
    }

    function makeMatch(e) {
        if (e.target.tagName == "I") {
            return; // clicking on icon shows the modal only
        }

        socket.close();
        socket = io.connect('/auto-match-level-1');
        socket.on('matchReady', room_id => {
            foundPlayer();
            setTimeout(function () {
                window.location.href = `rooms/${room_id}`;
            }, 2000);
        });
        socket.emit('join');
        socket.emit('matchmaking');

        searchingPlayer();
        hideTooltip();
    }

    $("#automatch").click(function (e) {
        makeMatch(e)

    });

</script>